<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f7f2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f6f7f2"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f6f7f2"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_marginLeft="8dp"
            android:text="向我显示"
            android:textSize="14sp"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_margin="12dp"
            android:text="招聘者"
            android:textSize="18sp"
            android:visibility="visible" />

        <ToggleButton android:id="@+id/zhaopin_toggleButton"
              android:layout_width="25dp"
            android:layout_height="15dp"
              android:maxHeight="30dp"
              android:textOn=""
              android:textOff=""
              android:layout_centerVertical ="true"
              android:layout_alignParentRight="true"
              android:layout_marginRight="8dp"
              android:background="@drawable/btn_anniu_toggle_states"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <TextView
            
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfdfdf"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_margin="12dp"
            android:text="求职者"
            android:textSize="18sp"
            android:visibility="visible" />
        	
        <Button
            android:id="@+id/btn_qiuzhi_switch"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:maxHeight="30dp"
            android:layout_centerVertical ="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_anniu_a"
            android:layout_marginRight="8dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <TextView
            
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfdfdf"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_margin="12dp"
            android:text="合伙人"
            android:textSize="18sp"
            android:visibility="visible" />
        	
        <ToggleButton android:id="@+id/hehuo_toggleButton"
              android:layout_width="25dp"
              android:layout_height="15dp"
              android:maxHeight="30dp"
              android:textOn=""
              android:textOff=""
              android:layout_centerVertical ="true"
              android:layout_alignParentRight="true"
              android:layout_marginRight="8dp"
              android:background="@drawable/btn_anniu_toggle_states"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f6f7f2"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f6f7f2"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_marginLeft="8dp"
            android:text="显示年龄"
            android:textSize="14sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/title_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="23-28"
            android:textSize="14sp"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" 
       >

        <ImageView
			android:id="@+id/boy_image" 
        	android:layout_width="26dp"
        	android:layout_height="30dp"
        	android:layout_marginRight="2dp"
        	android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
        	android:src="@drawable/boy"/>
        <ImageView
			android:id="@+id/seekbar_endpoint" 
        	android:layout_width="41dp"
        	android:layout_height="42dp"
        	android:layout_toRightOf="@id/boy_image"
        	android:layout_marginRight="2dp"
        	android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
        	android:src="@drawable/shensuoanniu"/>
        <ImageView
			android:id="@+id/old_image" 
        	android:layout_width="26dp"
        	android:layout_height="30dp"
        	android:layout_alignParentRight="true"
        	android:layout_marginRight="10dp"
        	android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
        	android:src="@drawable/old"/>
        
        <SeekBar
            android:layout_width="290dp"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_toRightOf="@id/seekbar_endpoint"
        	android:layout_toLeftOf="@id/old_image"
        	android:maxHeight="6dp"  
			android:minHeight="6dp"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:max="100"
			android:progress="35"
			android:progressDrawable="@drawable/seekbar_style"
			android:thumb="@drawable/seekbar_thumb"
			android:id="@+id/seekBar"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f6f7f2"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f6f7f2"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_marginLeft="8dp"
            android:text="联系人"
            android:textSize="14sp"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_margin="12dp"
            android:text="屏蔽手机联系人"
            android:textSize="18sp"
            android:visibility="visible" />
        	
        <ToggleButton android:id="@+id/lianxiren_toggleButton"
              android:layout_width="25dp"
              android:layout_height="15dp"
              android:maxHeight="30dp"
              android:textOn=""
              android:textOff=""
              android:layout_centerVertical ="true"
              android:layout_alignParentRight="true"
              android:layout_marginRight="8dp"
              android:background="@drawable/btn_anniu_toggle_states"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <TextView
            
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfdfdf"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mask_co_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_margin="12dp"
            android:text="屏蔽公司"
            android:textSize="18sp"
            android:visibility="visible" />
        	
        <ToggleButton android:id="@+id/gongsi_toggleButton"
              android:layout_width="25dp"
              android:layout_height="15dp"
              android:maxHeight="30dp"
              android:textOn=""
              android:textOff=""
              android:layout_centerVertical ="true"
              android:layout_alignParentRight="true"
              android:layout_marginRight="8dp"
              android:background="@drawable/btn_anniu_toggle_states"/>
    </RelativeLayout>
</LinearLayout>