<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trade_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f7f2"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f6f7f2"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f6f7f2"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_marginLeft="8dp"
            android:text="举报该用户的理由"
            android:textSize="14sp"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_margin="12dp"
            android:text="虚假账号"
            android:textSize="18sp"
            android:visibility="visible" />
        	
        <ImageView 
        	android:id="@+id/check_account"
        	android:layout_width="20dp"
        	android:layout_height="20dp"
        	android:layout_marginRight="20dp"
        	android:layout_centerVertical="true"
        	android:layout_alignParentRight="true"
        	android:src="@drawable/xuanding"
        	android:visibility="visible"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <TextView
            android:id="@+id/split_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfdfdf"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/wrong_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical ="true"
            android:layout_margin="12dp"
            android:text="虚假信息"
            android:textSize="18sp"
            android:visibility="visible" />
        	
        <ImageView 
        	android:id="@+id/check_message"
        	android:layout_width="20dp"
        	android:layout_height="20dp"
        	android:layout_marginRight="20dp"
        	android:layout_centerVertical="true"
        	android:layout_alignParentRight="true"
        	android:src="@drawable/xuanding"
        	android:visibility="gone"/>
        
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <TextView
            android:id="@+id/split_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfdfdf"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/check_other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/other_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop ="12dp"
            android:layout_marginLeft="12dp"
            android:text="其它"
            android:textSize="18sp"
            android:visibility="visible" />
        
        <ImageView 
        	android:id="@+id/check_message"
        	android:layout_width="20dp"
        	android:layout_height="20dp"
        	android:layout_marginTop ="12dp"
        	android:layout_marginRight="20dp"
        	android:layout_centerVertical="true"
        	android:layout_alignParentRight="true"
        	android:src="@drawable/xuanding"
        	android:visibility="gone"/>

        <EditText
            android:id="@+id/message_txt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/other_message_title"
            android:layout_marginTop ="12dp"
            android:background="#ffffff"
            android:gravity="left"
            android:hint=""
            android:maxLength="100"
            android:textSize="20sp"
            android:visibility="visible" 

        />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <TextView
            android:id="@+id/split_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfdfdf"
            android:visibility="visible" />
    </RelativeLayout>
    
</LinearLayout>