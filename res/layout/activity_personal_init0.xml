<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/denglutiao"
        android:text="继   续"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_reg"
        android:background="#f6f7f2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f7f2"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageButton
                    android:id="@+id/btn_personal_a"
                    android:layout_width="@dimen/main_photo_size"
                    android:layout_height="@dimen/main_photo_size"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/divider_size"
                    android:layout_marginRight="@dimen/divider_size"
                    android:background="@drawable/personal_bg"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/btn_personal_b"
                    android:layout_width="@dimen/photo_size"
                    android:layout_height="@dimen/photo_size"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/divider_size"
                    android:layout_toRightOf="@id/btn_personal_a"
                    android:background="@drawable/personal_bg"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/btn_personal_c"
                    android:layout_width="@dimen/photo_size"
                    android:layout_height="@dimen/photo_size"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/btn_personal_b"
                    android:layout_marginBottom="@dimen/divider_size"
                    android:layout_toRightOf="@id/btn_personal_a"
                    android:background="@drawable/personal_bg"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/btn_personal_f"
                    android:layout_width="@dimen/photo_size"
                    android:layout_height="@dimen/photo_size"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/btn_personal_c"
                    android:layout_marginBottom="@dimen/divider_size"
                    android:layout_toRightOf="@id/btn_personal_a"
                    android:background="@drawable/personal_bg"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/btn_personal_d"
                    android:layout_width="@dimen/photo_size"
                    android:layout_height="@dimen/photo_size"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/btn_personal_a"
                    android:layout_marginBottom="@dimen/divider_size"
                    android:layout_marginRight="@dimen/divider_size"
                    android:background="@drawable/personal_bg"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/btn_personal_e"
                    android:layout_width="@dimen/photo_size"
                    android:layout_height="@dimen/photo_size"
                    android:layout_below="@id/btn_personal_a"
                    android:layout_marginBottom="@dimen/divider_size"
                    android:layout_marginRight="@dimen/divider_size"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@id/btn_personal_d"
                    android:background="@drawable/personal_bg"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#f6f7f2"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="#f6f7f2"
                android:padding="10dp" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/trade_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/trade_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="姓名"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/trade_content"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/jiantou_image"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:src="@drawable/dianjijiantou" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" >

                <TextView
                    android:id="@+id/split_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#dfdfdf"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/position_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/position_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="性别"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:layout_weight="1"  
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_btn"
                        android:paddingLeft="8dp"
                        android:paddingRight="16dp"
                        android:text="男"
                        android:textSize="18sp" />

                    <RadioButton
                         android:layout_weight="1"  
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_btn"
                        android:paddingLeft="8dp"
                       
                        android:text="女"
                        android:textSize="18sp" />
                </RadioGroup>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:src="@drawable/dianjijiantou" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#dfdfdf"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/service_year_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/service_year_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="出生日期"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/service_year"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:hint="点此选择日期"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:src="@drawable/dianjijiantou" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#dfdfdf"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/come_from_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="来自"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:hint="点此选择城市"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:src="@drawable/dianjijiantou" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#dfdfdf"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/school_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="血型"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/blood"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:hint="点此选择血型"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:src="@drawable/dianjijiantou" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f6f7f2"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/title_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="注册会员即为同意以下用户协议"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>