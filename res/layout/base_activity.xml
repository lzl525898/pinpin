<?xml version="1.0"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4489ca" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#4489ca" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_left"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="优聘"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/btn_search"
            android:visibility="visible" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title_txt"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="gone" />
    </RelativeLayout>
-

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:background="#313131" >
-

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#313131"
            android:baselineAligned="false"
            android:orientation="horizontal" >
-

            <RelativeLayout
                android:id="@+id/btn_jihui_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#313131"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_jihui"
                    android:layout_width="19dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_jihui"
                    android:clickable="false"
                    android:focusable="false"
                    android:maxHeight="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="优聘"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </RelativeLayout>
-

            <RelativeLayout
                android:id="@+id/btn_xiaoxi_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#313131"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_xiaoxi"
                    android:layout_width="23dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_xiaoxi"
                    android:clickable="false"
                    android:focusable="false"
                    android:maxHeight="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="聊天"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/badge_container"
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:maxHeight="30dp" />
            </RelativeLayout>
-

            <RelativeLayout
                android:id="@+id/btn_me_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#313131"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_me"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_me"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="我"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/top"
        android:background="#f6f7f2" />

</RelativeLayout>