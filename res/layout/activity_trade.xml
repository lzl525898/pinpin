<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trade_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f7f2"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <Button
            android:id="@+id/btn_chuangjiandi"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            android:text="   创建标签"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:background="@drawable/btn_chuangjiandi" />

        <ImageView
            android:id="@+id/tianjia"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignLeft="@+id/btn_chuangjiandi"
            android:layout_alignTop="@+id/btn_chuangjiandi"
            android:layout_margin="3dp"
            android:src="@drawable/tianjia" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >
        <TextView
            android:id="@+id/split_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfdfdf"
            android:visibility="visible" />
    </RelativeLayout>
    <com.pinpin.view.CustLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
         android:id="@+id/listview"
         >
    </com.pinpin.view.CustLinearLayout>
